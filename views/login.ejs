<!DOCTYPE html>
<html>

<head>
	<link rel="stylesheet" href="/css/sbgtnh.css">
	<link rel="stylesheet" href="/css/login.css">
	<script defer src="https://use.fontawesome.com/releases/v5.1.0/js/all.js"></script>
	<title>Login Sibangtanah</title>
</head>

<body>

	<!-- COBA LAGI -->
	<section class="hero is-info is-fullheight">
		<div class="hero-body">
			<div class="container has-text-centered">
				<div class="column is-4 is-offset-4">
					<h3 class="title has-text-grey">Login Dulu</h3>
					<p class="subtitle has-text-grey">Diperlukan untuk tindakan lebih lanjut.</p>
					<div class="box">
						<figure class="image image-login">
							<img src="/img/sbgtnh-logo.png">
						</figure>
						<form>
							<div class="field">
								<div class="control">
									<input class="input is-medium" type="username" placeholder="Username anda" autofocus="">
								</div>
							</div>
							<div class="field">
								<div class="control">
									<input class="input is-medium" type="password" placeholder="Password anda">
								</div>
							</div>
							<button class="button is-block is-warning is-medium is-fullwidth" type="submit">Login</button>
						</form>
					</div>
					<p class="has-text-grey">
						<a href="../">Sign Up</a> &nbsp;·&nbsp;
						<a href="../">Forgot Password</a> &nbsp;·&nbsp;
						<a href="../">Need Help?</a>
					</p>
				</div>
			</div>
		</div>
	</section>

	<!-- NANTI DIHAPUS -->
	<section class="section">
		<div class="container">
			<form method="post" action="/users/login">
				<div class="form-group">
					<label>Username</label>
					<input type="text" class="form-control" name="username" placeholder="Username">
				</div>
				<div class="form-group">
					<label>Password</label>
					<input type="password" class="form-control" name="password" placeholder="Password">
				</div>
				<button type="submit" class="btn">Submit</button>
			</form>
		</div>
	</section>
</body>

</html>
